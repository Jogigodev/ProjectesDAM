<Window x:Class="Trivial.View.jocView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trivial.View"
        xmlns:vm="clr-namespace:Trivial.ViewModel"
        mc:Ignorable="d"
        Title="PreguntaEditaView" Height="450" Width="800">
    <Window.DataContext>
        <vm:PreguntesViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock  Text="{Binding Preguntes.PreguntesJoc[0].Enunciat}"   FontSize="30" Margin="20" Grid.Row="0"/>
        <ListView ItemsSource="{Binding Preguntes.PreguntesJoc[0].Respostes}" Grid.Row="1" SelectedItem="{Binding RespostaSeleccionada}" />
        <Button x:Name="btnSeguent" Command="{Binding SeguentPreguntaCommand}" Margin="50"  Grid.Row="2" Content="Seguent Pregunta"/>
    </Grid>
</Window>
